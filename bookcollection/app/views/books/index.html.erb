<div class="books index">
  <h2>Book Collection</h2>
  <br>

  <% if flash[:alert] %>
      <div id="alert" style="color: green">
         <%= flash[:alert] %> 
      </div>
<% end %>

<br><br>

  <%= link_to('<button type="button">Add New Book</button>'.html_safe, new_book_path, :class => 'action new') %>

    <br><br>

  <table class="listing" summary="Book list">
    <tr class="header">
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td class="actions">
        <%= link_to('<button type="button">Show</button>'.html_safe, book_path(book), :class => 'action show') %>
        <%= link_to('<button type="button">Edit</button>'.html_safe, edit_book_path(book), :class => 'action edit') %>
        <%= link_to('<button type="button">Delete</button>'.html_safe, delete_book_path(book), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
